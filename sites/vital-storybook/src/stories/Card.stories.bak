import {
  addProps,
  asToken,
  Span,
  withDesign,
} from '@bodiless/fclasses';
import { TokenCollection } from '@canvasx/elements';
import { cxCard, CardClean } from '@canvasx/card';
// @ts-ignore
import image from './assets/product-pink.png';

import { createTokenStories } from './tokenStories';
import { withDefaultContent } from '@bodiless/core';

const withBasicContent: any = withDesign({
  Title: addProps({
    children: 'This is the title',
  }),
  Image: addProps({
    src: image,
  }),
});


const withBodilessContent = withDefaultContent({
  title: {
    text: 'This is the bodiless title,'
  },
  image: {
    src: image,
  }
});

const withContent = asToken(
  withBodilessContent,
  withBasicContent,
);

const { meta, story } = createTokenStories({
  title: 'Organisms/Card',
  component: withContent(CardClean),
  tokens: cxCard as TokenCollection<any>,
  componentName: 'CardClean',
  tokenCollectionName: 'cxCard',
});

export default meta;

// Unfortunately Storybook CSF does not yet provide a way to generate stories
// prorammatically.  See https://github.com/storybookjs/storybook/issues/9828
export const Clean = story();
