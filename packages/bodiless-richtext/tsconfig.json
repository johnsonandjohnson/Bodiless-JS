{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "allowJs": false,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "es2019"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "__tests__/**/*.*",
    "src/**/__tests__/**/*.*"
  ]
}
