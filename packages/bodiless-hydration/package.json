{
  "name": "@bodiless/hydration",
  "version": "1.0.0-rc.42",
  "description": "Tools to manage how React hydrates your components",
  "author": "Lucas Varela <lvarelab@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "WebpackIslandLoader.js",
    "AutoDiscoverIslands.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "run-p build:lib",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "dev": "npm run build:watch",
    "build:api-doc": "typedoc --options ../../typedoc.js --out doc/api ./src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo && rimraf \"doc/api\""
  },
  "dependencies": {
    "@bodiless/data": "^1.0.0-rc.42",
    "@bodiless/fclasses": "^1.0.0-rc.42",
    "crypto-js": "^4.1.1",
    "lodash": "^4.17.19",
    "fast-glob": "^3.2.5",
    "@loadable/component": "^5.15.3",
    "next": "^13.3.4"
  },
  "devDependencies": {
    "@types/crypto-js": "4.1.1",
    "cheerio": "1.0.0-rc.3",
    "enzyme": "^3.9.0",
    "@babel/parser": "^7.22.0",
    "@babel/traverse": "^7.22.1",
    "@babel/generator": "^7.22.0",
    "@babel/types": "^7.22.0",
    "@types/loadable__component": "^5.13.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
