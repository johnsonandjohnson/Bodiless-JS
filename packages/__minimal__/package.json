{
  "name": "--minimal--",
  "sideEffects": false,
  "version": "1.0.0-rc.1",
  "description": "Starter template for a BodilessJS Design System package",
  "author": "Chris Oden <coden@its.jnj.com>",
  "license": "Apache-2.0",
  "private": true,
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bodiless.docs.json",
    "/getDocs.js",
    "/tailwind.config.js",
    "/doc",
    "./shadow.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "scripts": {
    "build": "run-p build:lib",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "build:api-doc": "typedoc --options ../../typedoc.js --out doc/api ./src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "dependencies": {
    "@bodiless/cli": "^1.0.0-rc.1",
    "@bodiless/components": "^1.0.0-rc.1",
    "@bodiless/components-ui": "^1.0.0-rc.1",
    "@bodiless/core": "^1.0.0-rc.1",
    "@bodiless/documentation": "^1.0.0-rc.1",
    "@bodiless/fclasses": "^1.0.0-rc.1",
    "@bodiless/gatsby-theme-bodiless": "^1.0.0-rc.1",
    "@bodiless/layouts-ui": "^1.0.0-rc.1",
    "@bodiless/richtext-ui": "^1.0.0-rc.1",
    "@bodiless/ui": "^1.0.0-rc.1",
    "lodash": "^4.17.19",
    "tailwindcss": "^3.0.23"
  }
}
