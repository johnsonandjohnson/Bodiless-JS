{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveSymlinks": false,
    "declaration": false,
    "declarationMap": false,
    "allowJs": true,
    "noImplicitAny": false,
    "types": ["node"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "__tests__/**/*.*",
    "src/**/__tests__/**/*.*"
  ]
}
