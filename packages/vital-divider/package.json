{
  "name": "@bodiless/vital-divider",
  "version": "1.0.0-rc.42",
  "description": "Divider component",
  "author": "Samer Ali <sali31@its.jnj.com>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "sideEffects": false,
  "typings": "lib/index.d.ts",
  "files": [
    "/lib",
    "/bodiless.docs.json",
    "/doc",
    "/getDocs.js",
    "tailwind.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/johnsonandjohnson/bodiless-js.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:lib && npm run copy && npm run build:api-doc",
    "build:lib": "tsc -p ./tsconfig.json",
    "build:watch": "npm run build:lib -- --watch",
    "dev": "npm run build:watch",
    "build:api-doc": "typedoc --out doc/api ./src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "clean": "rimraf \"lib/*\" && rimraf tsconfig.tsbuildinfo",
    "copy": "copyfiles -u 1 \"./src/**/*.css\" \"./lib/\""
  },
  "dependencies": {
    "@bodiless/cli": "^1.0.0-rc.42",
    "@bodiless/fclasses": "^1.0.0-rc.42",
    "@bodiless/hydration": "^1.0.0-rc.42",
    "@bodiless/vital-elements": "^1.0.0-rc.42",
    "lodash": "^4.17.19",
    "tailwindcss": "^3.0.23"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
